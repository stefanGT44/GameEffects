package app;

import java.awt.Graphics2D;
import java.awt.event.KeyEvent;
import java.awt.image.BufferedImage;

import menuScreens.EscScreen;
import menuScreens.Screen1;
import menuScreens.Screen2;
import menuScreens.Screen3;
import rafgfxlib.GameFrame;

public class Game extends GameFrame {
	public static int width = 1200;
	public static int height = 800;
	public int screenNumber = 1;
	int MinScNum = 1;
	int MaxScNum = 3;

	public EscScreen escScreen;
	public Screen1 screen1;
	public Screen2 screen2;
	public Screen3 screen3;

	boolean escDown = false;
	boolean rightDown = false;
	boolean leftDown = false;

	public static Game instance;

	public static Game get() {
		if (instance == null)
			new Game();
		return instance;
	}

	public Game() {
		super("Racunarska Grafika", width, height);
		instance = this;
		setHighQuality(true);

		// screens
		escScreen = new EscScreen();
		screen1 = new Screen1();
		screen2 = new Screen2();
		screen3 = new Screen3();

		startThread();
	}

	@Override
	public void render(Graphics2D g, int sw, int sh) {

		if (screenNumber == 0)
			escScreen.render(g, sw, sh);

		if (screenNumber == 1)
			screen1.render(g, sw, sh);

		if (screenNumber == 2)
			screen2.render(g, sw, sh);

		if (screenNumber == 3)
			screen3.render(g, sw, sh);

	}

	@Override
	public void update() {
		if (screenNumber == 0) {
			escScreen.update(getMouseX(), getMouseY(), isKeyDown(KeyEvent.VK_ESCAPE));
			return;
		}

		if (screenNumber == 1)
			screen1.update(getMouseX(), getMouseY());
		if (screenNumber == 2)
			screen2.update(getMouseX(), getMouseY());
		if (screenNumber == 3)
			screen3.update(getMouseX(), getMouseY());

		if (!isKeyDown(KeyEvent.VK_LEFT)) {
			if (leftDown) {
				leftDown = false;
				screenNumber--;
				if (screenNumber < MinScNum)
					screenNumber = 3;
			}
		} else
			leftDown = true;

		if (!isKeyDown(KeyEvent.VK_RIGHT)) {
			if (rightDown) {
				rightDown = false;
				screenNumber++;
				if (screenNumber > MaxScNum)
					screenNumber = 1;
			}
		} else
			rightDown = true;

		if (!isKeyDown(KeyEvent.VK_ESCAPE)) {
			if (escDown) {
				escDown = false;
				BufferedImage bImage = new BufferedImage(width, height, BufferedImage.TYPE_INT_RGB);
				Graphics2D g2 = bImage.createGraphics();
				render(g2, width, height);
				
				BufferedImage bufImage = new BufferedImage(600, 400, BufferedImage.TYPE_INT_RGB);
				Graphics2D g3 = bufImage.createGraphics();
				g3.drawImage(bImage, 0, 0, 600, 400, null);
				
				escScreen.setBackground(bufImage, screenNumber);
				screenNumber = 0;
			}
		} else
			escDown = true;

	}

	@Override
	public void handleWindowInit() {
		// TODO Auto-generated method stub

	}

	@Override
	public void handleWindowDestroy() {
		// TODO Auto-generated method stub

	}

	@Override
	public void handleMouseDown(int x, int y, GFMouseButton button) {
		// TODO Auto-generated method stub

	}

	@Override
	public void handleMouseUp(int x, int y, GFMouseButton button) {
		// TODO Auto-generated method stub

	}

	@Override
	public void handleMouseMove(int x, int y) {
		// TODO Auto-generated method stub

	}

	@Override
	public void handleKeyDown(int keyCode) {
		// TODO Auto-generated method stub

	}

	@Override
	public void handleKeyUp(int keyCode) {
		// TODO Auto-generated method stub

	}

	public static void main(String[] args) {
		GameFrame gf = new Game();
		gf.initGameWindow();
	}

}
